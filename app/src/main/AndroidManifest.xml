<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.pendual.mpdcoursework">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IncidentsActivity"
            android:label="@string/title_activity_incidents"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.pendual.mpdcoursework.MainActivity" />
        </activity>
        <activity
            android:name=".PlannedActivity"
            android:label="@string/title_activity_planned"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.pendual.mpdcoursework.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayInfoActivity"
            android:label="@string/title_activity_display_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>